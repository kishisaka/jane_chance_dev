<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
		
	<!-- ***** init servlet, runs when tomcat is started ***** -->
	<servlet>				
		<servlet-name>poolInitServlet</servlet-name>
		<servlet-class>us.ttyl.chance.startup.Initializer</servlet-class>		
		<init-param>
			<param-name>image_directory</param-name>
			<param-value>/chance_images</param-value>
		</init-param>
		<init-param>
			<param-name>smtp_host</param-name>	
			<param-value>smtpout.secureserver.net</param-value>
		</init-param>
		<init-param>
			<param-name>smtp_port</param-name>
			<param-value>3550</param-value>
		</init-param>
		<init-param>
			<param-name>mail_source</param-name>
			<param-value>admin@johnchance.com</param-value>
		</init-param>
		<init-param>
			<param-name>mail_user</param-name>
			<param-value>admin@johnchance.com</param-value>
		</init-param>	
		<init-param>
			<param-name>mail_password</param-name>
			<param-value>admin1234</param-value>
		</init-param>			
		<init-param>
			<param-name>hour</param-name>
			<param-value>5</param-value>
		</init-param>		
		<init-param>
			<param-name>sleep_interval</param-name>
			<param-value>3600000</param-value>
		</init-param>
		<load-on-startup>99</load-on-startup>		
	</servlet>

	<!-- ***** Login servlets ***** -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>us.ttyl.chance.web.Login</servlet-class>
	</servlet>	
	
	<!-- ***** Home servlets ***** -->
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>us.ttyl.chance.web.Home</servlet-class>
	</servlet>
	
	<!-- ***** Home servlets ***** -->
	<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>us.ttyl.chance.web.UserMain</servlet-class>
	</servlet>
	
	<!-- ***** Registration servlets ***** -->
	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>us.ttyl.chance.web.Register</servlet-class>
	</servlet>

	<!-- ***** view messages servlets ***** -->
	<servlet>
		<servlet-name>listMessages</servlet-name>
		<servlet-class>us.ttyl.chance.web.Messaging</servlet-class>
	</servlet>
	
	<!-- ***** get image servlet ***** -->
	<servlet>
		<servlet-name>getImage</servlet-name>
		<servlet-class>us.ttyl.chance.web.ImageGrabber</servlet-class>
	</servlet>
	
	<!-- ***** upload pictures servlet ***** -->
	<servlet>
		<servlet-name>uploadPictures</servlet-name>
		<servlet-class>us.ttyl.chance.web.UploadPictures</servlet-class>
	</servlet>
	
	<!-- ***** profiles servlet ***** -->
	<servlet>
		<servlet-name>profiles</servlet-name>
		<servlet-class>us.ttyl.chance.web.Profiles</servlet-class>
	</servlet>
	
	<!-- ***** profiles servlet ***** -->
	<servlet>
		<servlet-name>abuse</servlet-name>
		<servlet-class>us.ttyl.chance.web.AbuseReporter</servlet-class>
	</servlet>
	
	<!--  ******************************************* MAPPING ********************************* -->	

	<!-- home mapping -->
	
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<!-- Login servlets -->
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>listMessages</servlet-name>
		<url-pattern>/listMessages</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>getImage</servlet-name>
		<url-pattern>/getImage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>uploadPictures</servlet-name>
		<url-pattern>/uploadPictures</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>profiles</servlet-name>
		<url-pattern>/profiles</url-pattern>
	</servlet-mapping>
	
		<servlet-mapping>
		<servlet-name>abuse</servlet-name>
		<url-pattern>/abuse</url-pattern>
	</servlet-mapping>
	
	<!-- **** Set the session timeout to 90 minutes **** -->
	<session-config>
		<session-timeout>90</session-timeout>
	</session-config>

</web-app>